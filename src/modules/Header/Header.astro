---
import Button from '@/components/Button.astro'
import Dropdown from '@/components/Dropdown/Dropdown.astro'

import Logo from '@/assets/logo.svg'
import { LINK } from '@/consts/link'

import Navbar from './components/Navbar.astro'
import NavBrand from './components/NavBrand.astro'
import Hamburger from './components/Hamburger.astro'
import NavUl from './components/NavUl.astro'
import NavLi from './components/NavLi.astro'

import WebdevIcon from '@/assets/icons/navbar-desarrollo-web.svg'
import DesignIcon from '@/assets/icons/navbar-dise침o-grafico.svg'
