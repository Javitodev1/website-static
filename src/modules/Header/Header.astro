---
import Button from '@/components/Button.astro'
import Dropdown from '@/components/Dropdown/Dropdown.astro'

import Logo from '@/assets/logo.svg'
import { Link } from '@/consts/link'

import Navbar from './components/Navbar.astro'
import NavBrand from './components/NavBrand.astro'
import Hamburger from './components/Hamburger.astro'
import NavUl from './components/NavUl.astro'
import NavLi from './components/NavLi.astro'
---

<Navbar id='header'>
  <NavBrand>
    <Logo />
  </NavBrand>

  <Hamburger id='hamburger' />

  <NavUl id='navbar'>
    <NavLi href={Link.root}>Home</NavLi>

    <Dropdown name='services'>
      <Fragment slot='header'>Servicios</Fragment>
      <NavLi href={Link.webdev}>Desarrollo Web</NavLi>
      <NavLi href={Link.ads}>Publicidad</NavLi>
      <NavLi href={Link.design}>Diseño Gráfico</NavLi>
    </Dropdown>

    <Button
      href={Link.contact}
      cta='Contacto'
    />
  </NavUl>
</Navbar>

<script src='./lib/navbar.ts'></script>
