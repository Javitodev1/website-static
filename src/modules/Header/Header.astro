import type { CMSImage } from '@/types/content'

const webdevIcon: CMSImage = {
  url: WebdevIcon.src,
  width: WebdevIcon.width,
  height: WebdevIcon.height,
  alternativeText: 'Suads Agency | Servicio de desarrollo web',
}

const designIcon: CMSImage = {
  url: DesignIcon.src,
  width: DesignIcon.width,
  height: DesignIcon.height,
  alternativeText: 'Suads Agency | Servicio de Dise침o Grafico',
