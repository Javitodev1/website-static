---
const wrapperStyles = {
  normal: 'my-16 md:my-32',
  small: 'my-8 md:my-16',
  none: '',
}

const colorStyles = {
  default: 'bg-primary-1000',
  none: '',
}

type Variant = keyof typeof wrapperStyles
type Color = keyof typeof colorStyles

export interface Props {
  id?: string
  bgImage?: string
  class?: string
  containerClass?: string
  tag?: 'section' | 'header' | 'footer' | 'div' | 'aside'
  variant?: Variant
  color?: Color
}

const {
  id,
  class: className,
  containerClass,
  variant = 'normal',
  color = 'default',
  tag: Tag = 'section',
} = Astro.props

const wrapperClass = wrapperStyles[variant]
const colorClass = colorStyles[color]
---

<Tag
  id={id}
  class:list={[wrapperClass, className, colorClass]}>
  <slot name='before' />

  <div
    class='px-4 md:px-0 md:max-w-7xl md:mx-auto'
    class:list={[containerClass]}>
    <slot />
  </div>

  <slot name='after' />
</Tag>
