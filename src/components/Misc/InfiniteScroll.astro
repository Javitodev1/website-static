---
import type { CMSImage } from '@/types/content'

export interface Props {
  items: CMSImage[]
}

const { items } = Astro.props
---

<div class='mx-auto max-w-[90vw] md:max-w-none md:w-full flex overflow-x-hidden'>
  <div class='animate-marquee py-6 flex whitespace-nowrap flex-shrink-0'>
    {
      items.map((item) => (
        <img
          src={item.url}
          alt={item.alternativeText}
          width={item.width}
          height={item.height}
          loading={'lazy'}
          class='h-8 w-auto md:h-14 md:w-auto mx-12'
        />
      ))
    }
  </div>
  <div class='animate-marquee py-6 flex whitespace-nowrap flex-shrink-0'>
    {
      items.map((item) => (
        <img
          src={item.url}
          alt={item.alternativeText}
          width={item.width}
          height={item.height}
          loading={'lazy'}
          class='h-8 w-auto md:h-14 md:w-auto mx-12'
        />
      ))
    }
  </div>
</div>
