---
interface Props {
  id: string
  labelledby: string
  class?: string
}

const { id, labelledby, class:className } = Astro.props
---

<div
  id={id}
  data-dropdown-menu
  class='z-10 hidden rounded-lg py-6 px-7'
  class:list={[className]}>
  <ul
    class='space-y-4'
    aria-labelledby={labelledby}>
    <slot />
  </ul>
</div>
