---
interface Props {
  id: string
  labelledby: string
}

const { id, labelledby } = Astro.props
---

<div
  id={id}
  data-dropdown-menu
  class='z-10 hidden rounded-lg shadow-sm bg-primary-1000/95 py-6 px-7 inset-shadow-card inset-shadow-blue-700/5 border-l-2 border-b-2 border-blue-700/20'>
  <ul
    class='space-y-4'
    aria-labelledby={labelledby}>
    <slot />
  </ul>
</div>
